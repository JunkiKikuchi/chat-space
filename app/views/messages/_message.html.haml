.message{data: {message_id: "#{message.id}"}}
  .message__upper-info
    %p.message__upper-info__talker
      = message.user.name
    %p.message__upper-info__date
      = message.created_at.in_time_zone('Asia/Tokyo').strftime("%Y/%m/%d(%a) %H:%M")
  %p.message__text
    - if message.message.present?
      = message.message
  = image_tag message.image.url if message.image.present?
